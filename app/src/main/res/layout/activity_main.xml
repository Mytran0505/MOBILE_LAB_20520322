<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:textColor="@color/black"
                android:text="@string/txtTextView1" />

            <TableLayout
                android:id="@+id/RowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RowView">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="@dimen/width100"
                        android:layout_height="@dimen/height100"
                        android:background="@color/red" />

                    <TextView
                        android:layout_width="@dimen/width100"
                        android:layout_height="@dimen/height100"
                        android:background="@color/yellow" />

                    <TextView
                        android:layout_width="@dimen/width100"
                        android:layout_height="@dimen/height100"
                        android:background="@color/light_green" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:textColor="@color/black"
                android:text="@string/txtTextView2" />

            <TableLayout
                android:id="@+id/ColumnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ColumnView"
                android:stretchColumns="0,1" >
                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/width100"
                            android:layout_height="@dimen/height100"
                            android:background="@color/red" />

                        <TextView
                            android:layout_width="@dimen/width100"
                            android:layout_height="@dimen/height100"
                            android:background="@color/yellow" />

                        <TextView
                            android:layout_width="@dimen/width100"
                            android:layout_height="@dimen/height100"
                            android:background="@color/light_green" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:textColor="@color/black"
                android:text="@string/txtTextView3" />

            <TableLayout
                android:id="@+id/ListViewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ListView">

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height100"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:orientation="horizontal"></LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height100"
                        android:layout_weight="1"
                        android:background="@color/yellow"
                        android:orientation="horizontal"></LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height50"
                        android:layout_weight="1"
                        android:background="@color/light_green"
                        android:orientation="horizontal"></LinearLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:textColor="@color/black"
                android:text="@string/txtTextView4" />

            <TableLayout
                android:id="@+id/GridViewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:stretchColumns="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GridView">

                <TableRow android:layout_width="wrap_content">

                    <LinearLayout

                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/width180"
                        android:layout_height="@dimen/height180"
                        android:background="@color/gridColor1"
                        android:layout_margin="@dimen/pad8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/pad10"
                            android:text="@string/txtGridView1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeGrid"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/width180"
                        android:layout_height="@dimen/height180"
                        android:background="@color/gridColor2"
                        android:layout_margin="@dimen/pad8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/pad10"
                            android:text="@string/txtGridView2"
                            android:textSize="@dimen/textSizeGrid"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/width180"
                        android:layout_height="@dimen/height180"
                        android:background="@color/gridColor3"
                        android:layout_margin="@dimen/pad8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/pad10"
                            android:text="@string/txtGridView3"
                            android:textSize="@dimen/textSizeGrid"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/width180"
                        android:layout_height="@dimen/height180"
                        android:background="@color/gridColor4"
                        android:layout_margin="@dimen/pad8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/pad10"
                            android:text="@string/txtGridView4"
                            android:textSize="@dimen/textSizeGrid"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>