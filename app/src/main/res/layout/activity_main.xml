<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Row" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#FF0000" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#FFFF00" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#00FFCC	" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Column" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#FF0000" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#FFFF00" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="#00FFCC	" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="ListView" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/hop1"
                    android:background="#FF0000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/hop2"
                    android:background="#FFFF00"
                    android:layout_below="@+id/hop1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00FFCC"
                    android:layout_below="@+id/hop2" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="GridView" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:columnCount="2"
                app:rowCount="2"
                >
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="He'd have you all unravel at the"
                    android:background="#CCFFFF"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_row="0"
                    app:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_margin="8dp"
                    />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="Heed not the rabble"
                    android:background="#66FFFF"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_row="0"
                    app:layout_column="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_margin="8dp"

                    />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:background="#00FFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:text="Sound of screams but the"
                    android:textColor="@color/black"
                    app:layout_column="0"
                    app:layout_row="1" />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="Who scream"
                    android:background="#66CCFF"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_row="1"
                    app:layout_column="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_margin="8dp"
                    />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>